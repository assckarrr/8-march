        .hidden-content {
            display: none;
            animation: fadeIn 1.5s ease-in-out;
        }

        .hidden-message {
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
            background: rgba(0, 0, 0, 0.2);
            padding: 20px;
