            margin-top: 20px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        }

        .reveal-btn {
            font-size: 1.2rem;
            padding: 12px 20px;
            border: none;
            border-radius: 10px;
            background: #ff69b4;
            color: white;
            cursor: pointer;
            transition: 0.3s ease-in-out;
        }

        .reveal-btn:hover {
            background: #ff1493;
            transform: scale(1.05);
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
